# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Optional: ElevenLabs API for voice synthesis
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# Optional: fal.ai API for video generation
# The API key can be obtained from https://fal.ai/dashboard
# Note: fal.ai uses FAL_KEY as the standard environment variable name
FAL_KEY=your_fal_key_here
# Alternative: Some integrations also support FAL_API_KEY
FAL_API_KEY=your_fal_key_here

# Optional: Model Configuration
DEFAULT_MODEL=gpt-4
FALLBACK_MODEL=gpt-3.5-turbo

# Simulation Settings
DEFAULT_SIMULATION_HOURS=3
DEFAULT_TIME_STEP_MINUTES=15

# Output Configuration
OUTPUT_DIRECTORY=output
SAVE_INTERMEDIATE_FILES=true

# Logging
LOG_LEVEL=INFO
LOG_FILE=showrunner.log